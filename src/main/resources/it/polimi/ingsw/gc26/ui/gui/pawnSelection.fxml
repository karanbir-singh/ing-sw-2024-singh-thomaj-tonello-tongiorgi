<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gc26.ui.gui.sceneControllers.PawnSelectionController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <Label fx:id="status" text="Select the color of your pawn">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <HBox fx:id="buttonHBox" alignment="CENTER" prefHeight="100.0" prefWidth="539.0" spacing="20.0">
                    <children>
                        <Button fx:id="greenButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: #1dcf3d;" textFill="#1dcf3d">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Button>
                        <Button fx:id="redButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: #FF0000;">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Button>
                        <Button fx:id="blueButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: #3305ff;" textFill="#3305ff">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Button>
                        <Button fx:id="yellowButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: #fff701;" textFill="#fff701">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
