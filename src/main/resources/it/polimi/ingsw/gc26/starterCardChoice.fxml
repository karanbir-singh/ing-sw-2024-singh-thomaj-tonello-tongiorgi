                              <Image url="@../../../../images/frontSide/img_27.jpeg" />
                           </image>
                        </ImageView>
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
            <VBox fx:id="rightVBox" prefHeight="200.0" prefWidth="100.0" />
